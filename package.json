{
  "name": "emnet-site",
  "version": "1.0.0",
  "description": "Static marketing site for EmNet Community Management Limited with shared styling and progressive enhancement.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"styles/**/*.css\"",
    "lint:js": "eslint assets --ext .js",
    "lint": "run-p lint:html lint:css lint:js",
    "check:links": "linkinator . --recurse --retry 2 --silent --skip \"^mailto:|^tel:|^https?://t.me\"",
    "serve": "http-server . -p 4173 -c-1 --silent",
    "lhci:ci": "lhci autorun",
    "ci": "npm run lint && npm run check:links && npm run lhci:ci"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.1",
    "eslint": "^8.57.1",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "linkinator": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
